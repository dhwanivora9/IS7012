@page
@model CoreCrud.Pages.Athletes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add entries in athlete database</h1>

<h3>Steps for filling form are as follows</h3>
<ul>
    <li> All fields are required except Height</li>
    <li> Athlete Name should be filled correctly and should be greater than 2 characters</li>
    <li> Birth date should be in past</li>
    <li> Fill in the citizenship of the players</li>
    <li> Provide weight</li>



    <h4>Athlete</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Athlete.Name" class="control-label"></label>
                    <input asp-for="Athlete.Name" class="form-control" />
                    <span asp-validation-for="Athlete.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Athlete.BirthDate" class="control-label"></label>
                    <input asp-for="Athlete.BirthDate" class="form-control" />
                    <span asp-validation-for="Athlete.BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Athlete.USCitizen" /> @Html.DisplayNameFor(model => model.Athlete.USCitizen))
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Athlete.Weight" class="control-label"></label>
                    <input asp-for="Athlete.Weight" class="form-control" />
                    <span asp-validation-for="Athlete.Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Athlete.Height" class="control-label"></label>
                    <input asp-for="Athlete.Height" class="form-control" />
                    <span asp-validation-for="Athlete.Height" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Athlete.NationalityID" class="control-label"></label>
                    <select asp-for="Athlete.NationalityID" class="form-control" asp-items="ViewBag.NationalityID"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
