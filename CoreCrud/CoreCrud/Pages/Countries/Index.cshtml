@page
@model CoreCrud.Pages.Countries.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>List of Countries</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div>
    <img src="https://upload.wikimedia.org/wikipedia/commons/d/d8/United_Nations_Flags_-_cropped.jpg" alt="Flags Photo" align="middle" width="1100" height="400">
</div>

<table class="table" align="center" width="800">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Country[0].CountryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Country) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
